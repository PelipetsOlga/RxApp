<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear" />

    <Button
        android:id="@+id/btn_subject_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish Subject" />

    <Button
        android:id="@+id/btn_subject_replay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Replay Subject" />

    <Button
        android:id="@+id/btn_subject_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Behavior Subject" />

    <Button
        android:id="@+id/btn_subject_asynk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Async Subject" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>
